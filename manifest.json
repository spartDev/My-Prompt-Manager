{
  "manifest_version": 3,
  "name": "My Prompt Manager",
  "version": "1.7.0",
  "description": "Personal prompt library for AI platforms. Store, organize, and instantly insert your best prompts with one click.",
  "author": "Thomas Roux",
  "homepage_url": "https://github.com/spartDev/My-Prompt-Manager",
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://www.perplexity.ai/*",
    "https://chat.mistral.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://chat.mistral.ai/*"
      ],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "resources": [
        "assets/content-*.js",
        "assets/platforms-*.js",
        "assets/floating-ui.dom-*.js"
      ],
      "use_dynamic_url": false
    }
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "My Prompt Manager - Manage your prompts"
  },
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "icons": {
    "16": "public/icons/icon-16.png",
    "32": "public/icons/icon-32.png",
    "48": "public/icons/icon-48.png",
    "128": "public/icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "short_name": "My Prompt Manager",
  "minimum_chrome_version": "114"
}
